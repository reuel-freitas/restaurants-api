#!/bin/bash -e

if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

echo "Ensuring gems are installed..."
bundle install

if echo "$*" | grep -q "rails server"; then
  echo "Running database preparation..."
  ./bin/rails db:prepare
fi

exec "${@}"
